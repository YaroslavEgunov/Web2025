@{
    ViewData["Title"] = "Задача 4";
}

<head>
    <link rel=stylesheet type="text/css" href="style.css">
    <style>
        body {
            background-color: darkblue;
        }
        .img1 {
            width: 300px;
            height: 300px;
            margin: 5px;
            border: outset 50px #ffA089;
        }
        .img2 {
            width: 300px;
            height: 300px;
            margin: 5px;
            border: outset 50px #89ffA0;
        }
        table {
            text-align: center;
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<script>
    function HideAndSeek(number) {
        if (document.getElementById(`hideImg${number}`).hidden === true) 
        {
            document.getElementById(`hideButton${number}`).value = 'Спрячь меня';
            document.getElementById(`hideImg${number}`).hidden = false;
        }
        else {
            document.getElementById(`hideButton${number}`).value = 'Покажи меня';
            document.getElementById(`hideImg${number}`).hidden = true;
        }
    }
</script>

<body onload="HideAndSeek(1),HideAndSeek(2)">
    <table>
        <tr>
            <td>
                <img class="img1" src="/images/horse1.jpeg" id="hideImg1" />
            </td>
            <td>
                <img class="img2" src="/images/horse2.jpeg" id="hideImg2" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="button" value="" id="hideButton1" onclick="HideAndSeek(1)" />
            </td>
            <td>
                <input type="button" value="" id="hideButton2" onclick="HideAndSeek(2)" />
            </td>
        </tr>
    </table>
</body>