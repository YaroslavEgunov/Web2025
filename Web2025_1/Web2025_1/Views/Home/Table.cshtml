@{
	ViewData["Title"] = "Таблица";
}

<head>
	<link rel=stylesheet type="text/css" href="style.css">
</head>

<style>
	table {
		border-collapse: collapse;
		margin-top:20px;
		margin: auto;
	}

	td {
		width: 30px;
		height: 30px;
		border: 3px solid white;
	}

	.r1 {
		background-color: cyan;
	}

	.r2 {
		background-color: darkblue;
	}

	.r3 {
		background-color: lawngreen;
	}
	
	.r4 {
		background-color: hotpink;
	}
</style>

<body>

	<script>
		let n=10;
		let s;
		document.write("<table>");
		for(i=1; i<=n; i++)
		{
			document.write("<tr>");
			for(j=1; j<=n; j++)
			{
				st=(i+j);
				if(st<=9)
					s="class='r1'";
				else
					s="class='r2'";
				document.write("<td "+s+"> </td>");
			}
			document.write("</tr>");
		}
		document.write("</table>");
			
		let m=10;
		let c;
