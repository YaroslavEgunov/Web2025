			for(i=1; i<=n; i++)
			{
				document.write("<tr>");
				for(j=1; j<=n; j++)
				{
					sk=(i+j)%4;  
					if(sk==0)
						s="class='r3'";
					else
						s="class='r4'";
					document.write("<td "+s+"> </td>");
				}
				document.write("</tr>");
			}
		document.write("</table>");
	</script>

</body>